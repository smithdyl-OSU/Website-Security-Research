<html>
{{#each foo}}
{{this}}
{{/each}}


<div class="db-add">
    <h3>Add Transaction:</h3>

    <form name="add_transaction_form" action="/transactions" method="POST">
        
        <div class="form-group">
            <label>t_id</label>
            <input type="text" class="form-control" id="t_id" name="t_id">
        </div>
        <div class="form-group">
            <label>book_id</label>
            <input type="text" class="form-control" id="book_id" name="book_id">
        </div>
        <div class="form-group">
            <label>user_id</label>
            <input type="text" class="form-control" id="user_id" name="user_id">
        </div>
        <div class="form-group">
            <label>date (YYYY-MM-DD)</label>
            <input type="text" class="form-control" id="date" name="date">
        </div>

        <input type="submit" value="Submit">
    </form>
</div>
<br />

<div class="db-view">
    <h3>Transactions:</h3>
    <table id="db-table2">
        <thead>
            <th>t_id</th>
            <th>book_id</th>
            <th>user_id</th>
            <th>date</th>

        </thead>
        <tbody>
            {{#each transactions}}
            <tr>
                <td>{{t_id}}</td>
                <td>{{book_id}}</td>
                <td>{{user_id}}</td>
                <td>{{date}}</td>


                <td><a href="/transactions/{{t_id}}">Update</a></td>
                <td><a href="/transactions/delete/{{t_id}}">Delete</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
</html>