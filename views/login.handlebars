<html>
<body>
    <h1 id="login-title">My Account Login</h1>
    <div class="form-background">
        <form action="/login" method="POST">
            <input type="text" name="username" id="username" placeholder="Username">
            <input type="password" name="password" id="password" placeholder="Password">
            <button>Login</button>
        </form>
        <div class="login-links">
            <a href="">Forgot Password?</a>
        </div>
        <div class="login-links">
            <a href="/register">Create New Account</a>
        </div>
    </div>
    <div class="objective">
        <h2>Objective:</h2>
        <button class="hint-btn" onclick="openForm()">Click for hint</button>
    </div>
    <div class="popup-container">
      <div class="hint" id="hint_popup">
        <p>Type hints here</p>
        <button class="hint-btn" onclick="closeForm()">Close</button>
      </div>
    </div>
    <script>
        function openForm() {
            document.getElementById("hint_popup").style.display = "block";
        }

        function closeForm() {
            document.getElementById("hint_popup").style.display = "none";
        }
    </script>
</body>
</html>
