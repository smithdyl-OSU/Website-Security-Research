<html>
{{#each foo}}
{{this}}
{{/each}}


<body>
    <nav class="nav-bar">
        <p><a href="/logout" id="nav-link">Logout</a></p>
    </nav>
    <div class="wrapper">
        <div id="user-info">
            <h3>Welcome, {{username}}!</h3>
        </div>
        <div class="results">
            <h3>Loaned Books</h3>
            <div>
                {{#if transactions}}
                <table id="user-books">
                    <tbody>
                        <thead>
                            <th>Book Title</th>
                            <th>Due Date</th>
                        </thead>
                        {{#each transactions}}
                        <tr>
                            <td>{{book_title}}</td>
                            <td>{{date}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

                {{else}}
                <p>No results found</p>
                {{/if}}
            </div>
        </div>
    </div>

    <div class="objective">
        <h2>Objective:</h2>
        <button class="hint-btn" onclick="openForm()">Click for hint</button>
    </div>
    <div class="popup-container">
        <div class="hint" id="hint_popup">
            <p>Type hints here</p>
            <button class="hint-btn" onclick="closeForm()">Close</button>
        </div>
    </div>
    <script>
        function openForm() {
            document.getElementById("hint_popup").style.display = "block";
        }

        function closeForm() {
            document.getElementById("hint_popup").style.display = "none";
        }
    </script>
</body>

</html>