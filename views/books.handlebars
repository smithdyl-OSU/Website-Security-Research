<html>
{{#each foo}}
{{this}}
{{/each}}


{{#if add}}
<div class="db-add">
    <h3>Add Book:</h3>

    <form name="add_book_form" action="/books" method="POST">

        <div class="form-group">
            <label>book_id</label>
            <input type="text" class="form-control" id="book_id" name="book_id">
        </div>
        <div class="form-group">
            <label>book_title</label>
            <input type="text" class="form-control" id="book_title" name="book_title">
        </div>
        <div class="form-group">
            <label>book_qty</label>
            <input type="text" class="form-control" id="book_qty" name="book_qty">
        </div>

        <input type="submit" value="Submit">
    </form>
</div>
<br />
{{/if}}
{{#if modify}}
<div class="db-view">
    <h3>Books:</h3>
    <table id="db-table1">
        <thead>
            <th>book_id</th>
            <th>book_title</th>
            <th>book_qty</th>
        </thead>
        <tbody>
            {{#each books}}
            <tr>
                <td>{{book_id}}</td>
                <td>{{book_title}}</td>
                <td>{{book_qty}}</td>


                <td><a href="/books/{{book_id}}">Update</a></td>
                <td><a href="/books/delete/{{book_id}}">Delete</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{/if}}
</html>